# ─── BrieflyAI Backend — Environment Variables ────────────────────────────────
# Copy this file to .env and fill in your values before launching.

# PostgreSQL connection string
DATABASE_URL=postgresql+psycopg2://postgres:2764@localhost:5432/brieflyai

# JWT secret key — MUST be >= 32 chars. Generate with:  python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-32-character-jwt-secret-key-here-change-in-production

# JWT signing algorithm (do not change)
ALGORITHM=HS256

# Token lifetime in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS — comma-separated allowed React origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
